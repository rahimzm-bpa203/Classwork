@model List<Category>

@{
    int count = 0;
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Category Table</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <a asp-action="create" class="btn btn-success">Create Category</a>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Name</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category category in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    @category.Name
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="update" asp-route-id="@category.Id">Update</a>
                                    <a class="btn btn-danger" asp-action="delete" asp-route-id="@category.Id">Delete</a>
                                    <a class="btn btn-primary" asp-action="detail" asp-route-id="@category.Id">Detail</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
